<h2>Log In</h2>
{{#if errorMsg}}
  <p>{{errorMsg}}</p>
{{/if}}
<form action="/login" method="POST">
  <label>Email:</label>
  <input type="email" name="email" placeholder="Your email" />
  <label>Password:</label>
  <input type="password" name="password" placeholder="Your password" />
  <button type="submit">Log In</button>
</form>